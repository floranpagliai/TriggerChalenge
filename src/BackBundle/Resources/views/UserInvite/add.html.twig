{{ form_start(form) }}
{% if errors is not null %}
    {% for error in errors %}
        <div class="control-group error-message"><p>{{ error.message|trans }}</p></div>
    {% endfor %}
{% endif %}
<div class="control-group{% if form.email.vars.errors|length %} has-danger{% endif %}">
    {{ form_widget(form.email) }}
</div>

<input class="btn btn-primary btn-large btn-block" type="submit" value="{{ 'user_invite.action.invite'|trans }}"/>
{{ form_end(form) }}
{% extends '@Back/layout.html.twig' %}

{% block body %}
    <div class="card">
        <div class="header">
            <h4 class="title">Challenges</h4>
            <p class="category">Here is all the challenges</p>
        </div>
        <div class="content table-responsive table-full-width">
            <table class="table table-hover table-striped">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Frequency</th>
                    <th>Is featured</th>
                    <th>Subjects</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for challenge in challenges %}
                    <tr id="challenge-{{ challenge.id }}">
                        <td>{{ challenge.name }}</td>
                        <td>{{ challenge.frequency }}</td>
                        <td>{{ challenge.featured ? '<i class="fa fa-check"></i>':'' }}</td>
                        <td>
                            {{ challenge.subjects|length }}
                            <a href="{{ path('back_challenge_subject_index', {'idChallenge': challenge.id}) }}">
                                <button type="button" class="btn btn-secondary btn-xs">See subjects</button>
                            </a>
                        </td>
                        <td class="td-actions text-right">
                            <button type="button" title="" class="btn btn-info btn-simple btn-xs">
                                <i class="fa fa-pencil"></i>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <a href="#">
        <button class="btn btn-info btn-fill">{{ 'challenge.action.add'|trans }}</button>
    </a>
{% endblock %}
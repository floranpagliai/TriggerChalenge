{% extends '@Front/layout.html.twig' %}

{% block body %}
    <div class="main">
        <div class="post">
            <div class="page-title">
                <h2>{{ post.title }}</h2>
            </div>
            <div class="post-photo">
                <img class="img-centered" src="{{ post.coverPicture.url(storage_bucket_name) }}"/>
            </div>
            <div class="post-sidebar">
                {% if post.author.profilePicture is not null %}
                    <img class="avatar" src="{{ post.author.profilePicture.url }}" alt="{{ post.author.firstName }}"/>
                {% else %}
                    <img class="avatar" src="{{ asset('bundles/front/img/user-unknow.png') }}"
                         alt="{{ post.author.firstName }}"/>
                {% endif %}
                <span>{{ post.author.fullName }}</span>
                <span class="small"><i class="fa fa-calendar-o"></i>{{ post.createdAt|date('d M') }}</span>
            </div>
        </div>
    </div>
{% endblock %}